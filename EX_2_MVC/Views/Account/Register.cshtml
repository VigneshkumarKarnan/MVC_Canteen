@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container p-3" style="background-image: linear-gradient(to top, #9795f0 0%, #fbc8d4 100%);">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-10 col-12">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h2 class="text-center mb-3">Register</h2>
                    <form asp-action="Register" method="post" class="px=3">
                        <div class="form-group mb-2">
                            <label>Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Email Address</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option>Select Gender</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <label>Address</label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                        </div>
                        <div class="form-group mb-2">
                            <label>Role</label><br />
                            <div class="form-check form-check-inline me-0 rounded-start">
                                @* <input class="btn-check" type="radio" asp-for="Role" value="User" />
                                <label class="form-check-label">User</label> *@
                                <input type="radio" class="btn-check" name="options-outlined" id="user-outlined" autocomplete="off" checked>
                                <label class="btn btn-outline-primary" for="user-outlined">User</label>
                            </div>
                            <div class="form-check form-check-inline ms-0 rounded-end">
                                @* <input class="form-check-input" type="radio" asp-for="Role" value="Admin" />
                                <label class="form-check-label">Admin</label> *@
                                <input type="radio" class="btn-check" name="options-outlined" id="admin-outlined" autocomplete="off">
                                <label class="btn btn-outline-primary" for="admin-outlined">Admin</label>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                      @*   <div>
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                        </div> *@
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-sm px-4 py-2">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
