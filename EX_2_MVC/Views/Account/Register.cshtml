@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body">
                    <h2 class="text-center mb-2">Register</h2>
                    <form asp-action="Register" method="post">
                        <div class="form-group mb-2">
                            <label>Full Name</label>
                            <input asp-for="FullName" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Username</label>
                            <input asp-for="Username" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Email Address</label>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Password</label>
                            <input asp-for="Password" class="form-control" type="password" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <div class="form-group mb-2">
                            <label>Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option>Select Gender</option>
                                <option>Male</option>
                                <option>Female</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="form-group mb-2">
                            <label>Address</label>
                            <textarea asp-for="Address" class="form-control"></textarea>
                        </div>
                        <div class="form-group mb-2">
                            <label>Role</label><br />
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Role" value="User" />
                                <label class="form-check-label">User</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="Role" value="Admin" />
                                <label class="form-check-label">Admin</label>
                            </div>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                      @*   <div>
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                        </div> *@
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-sm px-4">Register</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
